{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "prettier/prettier": "error",
        "avoid-throw": false,
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "compiler-version": ["error", "^0.8.16"]
    }
}
